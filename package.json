{
    "name": "noggin",
    "description": "Noggin Learning Platform",
    "private": true,
    "version": "v0.9.0-preview",
    "main": "out/main/index.js",
    "type": "module",
    "packageManager": "pnpm@9.12.3",
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "start": "electron-vite preview",
        "dev": "electron-vite dev",
        "build": "electron-vite build",
        "release": "electron-builder",
        "check": "tsc --noEmit -p tsconfig.node.json --composite false && tsc --noEmit -p tsconfig.web.json --composite false",
        "check:node": "tsc --watch --noEmit -p tsconfig.node.json --composite false",
        "check:ui": "tsc --watch --noEmit -p tsconfig.web.json --composite false",
        "test": "vitest",
        "test:e2e": "wdio run wdio.conf.ts",
        "test:ci": "vitest run",
        "test:e2e:ci": "wdio run wdio.conf.ts",
        "format": "prettier --write .",
        "lint": "eslint .",
        "lint:fix": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
        "build:unpack": "pnpm run build && electron-builder --dir",
        "build:win": "pnpm run build && electron-builder --win --config --publish never",
        "build:linux": "pnpm run build && electron-builder --linux --config --publish never",
        "publish:win": "electron-vite build && electron-builder --win --publish always",
        "publish:linux": "electron-vite build && electron-builder --linux --publish always",
        "rebuild:electron": "electron-rebuild -f -w better-sqlite3-electron && electron-builder install-app-deps"
    },
    "dependencies": {
        "@electron-toolkit/preload": "^3.0.1",
        "@electron-toolkit/utils": "^3.0.0",
        "@google/generative-ai": "^0.21.0",
        "@mantine/core": "^7.15.1",
        "@mantine/dropzone": "^7.15.1",
        "@mantine/form": "^7.15.1",
        "@mantine/hooks": "^7.15.1",
        "@mantine/notifications": "^7.15.1",
        "@react-spring/web": "^9.7.5",
        "@tabler/icons-react": "^3.26.0",
        "@tanstack/react-query": "^5.59.20",
        "@tanstack/react-router": "^1.79.0",
        "@tanstack/router-devtools": "^1.79.0",
        "@types/lodash": "^4.17.13",
        "dotenv": "^16.4.7",
        "electron-store": "^10.0.0",
        "glob": "^11.0.0",
        "immer": "^10.1.1",
        "lodash": "^4.17.21",
        "mime": "^4.0.6",
        "openai": "^4.77.0",
        "p-queue": "^8.0.1",
        "p-retry": "^6.2.1",
        "pngjs": "^7.0.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "usehooks-ts": "^3.1.0",
        "zod": "^3.24.1",
        "zustand": "^5.0.2"
    },
    "devDependencies": {
        "@electron-toolkit/eslint-config-prettier": "^2.0.0",
        "@electron-toolkit/eslint-config-ts": "^2.0.0",
        "@electron-toolkit/tsconfig": "^1.0.1",
        "@electron/rebuild": "^3.7.0",
        "@eslint/js": "^9.17.0",
        "@playwright/test": "^1.49.1",
        "@tanstack/router-plugin": "^1.79.0",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.1.0",
        "@types/node": "^22.10.2",
        "@types/pngjs": "^6.0.5",
        "@types/react": "^18.3.17",
        "@types/react-dom": "^18.3.5",
        "@vitejs/plugin-react": "^4.3.3",
        "@vitejs/plugin-react-swc": "^3.7.1",
        "@vitest/ui": "^2.1.4",
        "@wdio/cli": "^9.7.2",
        "@wdio/cucumber-framework": "^9.7.2",
        "@wdio/globals": "^9.7.2",
        "@wdio/local-runner": "^9.7.2",
        "@wdio/spec-reporter": "^9.6.3",
        "electron": "^31.7.3",
        "electron-builder": "^25.1.8",
        "electron-vite": "^2.3.0",
        "eslint": "^9.17.0",
        "eslint-plugin-react-hooks": "^5.1.0",
        "eslint-plugin-react-refresh": "^0.4.16",
        "globals": "^15.14.0",
        "happy-dom": "^15.11.7",
        "jsdom": "^25.0.1",
        "postcss": "^8.4.49",
        "postcss-preset-mantine": "^1.17.0",
        "postcss-simple-vars": "^7.0.1",
        "prettier": "3.4.2",
        "prettier-plugin-organize-imports": "^4.1.0",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.18.1",
        "vite": "^5.4.10",
        "vite-tsconfig-paths": "^5.1.0",
        "vitest": "^2.1.4",
        "wdio-electron-service": "^7.3.1"
    },
    "keywords": [],
    "author": {
        "name": "andgate",
        "email": "the.andgate@gmail.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/andgate/noggin"
    }
}
